<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bdc3c7"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foodtype"
            android:id="@+id/selectedFoodTxt"
            android:fontFamily="@font/muli_extrabold" android:textSize="36sp"
            android:textColor="@color/colorAccent"
            android:foregroundGravity="center_vertical"
            android:layout_marginTop="188dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/logodp"
            android:id="@+id/imageView3"
            android:foregroundGravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <Button
            android:text="Decide"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/decide_button"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:background="@color/colorAccent" android:fontFamily="@font/muli_extrabold"
            android:textColor="@android:color/background_light" android:textSize="19sp"/>
    <EditText
            android:layout_width="198dp"
            android:layout_height="64dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/add_food"
            android:fontFamily="@font/muli_extrabold" android:hint="add new food"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/add_food_button"/>
    <Button
            android:text="Add Food!"
            android:layout_width="223dp"
            android:layout_height="44dp"
            android:id="@+id/add_food_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorAccent" android:textSize="18sp"
            android:textColor="@android:color/background_light" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="90dp" app:layout_constraintBottom_toTopOf="@+id/decide_button"/>

</android.support.constraint.ConstraintLayout>